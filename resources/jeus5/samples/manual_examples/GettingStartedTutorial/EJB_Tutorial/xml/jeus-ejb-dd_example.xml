<?xml version="1.0" encoding="UTF-8"?>
<jeus-ejb-dd xmlns="http://www.tmaxsoft.com/xml/ns/jeus">
    <module-info/>
    <beanlist>
        <jeus-bean>
            <ejb-name>account</ejb-name>
            <export-name>account.AccountHome</export-name>
            <export-port>0</export-port>
            <single-vm-only>false</single-vm-only>
            <local-invoke-optimize>true</local-invoke-optimize>
            <thread-max>100</thread-max>
            <object-management>
                <bean-pool>
                    <pool-min>0</pool-min>
                    <pool-max>100</pool-max>
                </bean-pool>
                <connect-pool>
                    <pool-min>0</pool-min>
                    <pool-max>100</pool-max>
                </connect-pool>
                <capacity>10000</capacity>
                <passivation-timeout>-1</passivation-timeout>
                <disconnect-timeout>-1</disconnect-timeout>
            </object-management>
        </jeus-bean>
        <jeus-bean>
            <ejb-name>hello</ejb-name>
            <export-name>hello.HelloHome</export-name>
            <export-port>0</export-port>
            <single-vm-only>false</single-vm-only>
            <local-invoke-optimize>true</local-invoke-optimize>
            <thread-max>100</thread-max>
            <object-management>
                <bean-pool>
                    <pool-min>0</pool-min>
                    <pool-max>100</pool-max>
                </bean-pool>
                <connect-pool>
                    <pool-min>0</pool-min>
                    <pool-max>100</pool-max>
                </connect-pool>
                <capacity>10000</capacity>
                <passivation-timeout>-1</passivation-timeout>
                <disconnect-timeout>-1</disconnect-timeout>
            </object-management>
        </jeus-bean>
        <jeus-bean>
            <ejb-name>pkproduct</ejb-name>
            <export-name>pkproduct.ProductHome</export-name>
            <object-management>
                <passivation-timeout>-1</passivation-timeout>
                <disconnect-timeout>-1</disconnect-timeout>
            </object-management>
            <schema-info>
                <table-name>product</table-name>
                <cm-field>
                    <field>productID</field>
                    <column-name>productID</column-name>
                </cm-field>
                <cm-field>
                    <field>description</field>
                    <column-name>description</column-name>
                </cm-field>
                <cm-field>
                    <field>price</field>
                    <column-name>price</column-name>
                </cm-field>
                <creating-table>
                    <use-existing-table/>
                </creating-table>
                <find-method>
                    <query-method>
                        <method-name>findByDescription</method-name>
                        <method-params>
                            <method-param>java.lang.String</method-param>
                        </method-params>
                    </query-method>
                    <sql>description = ?</sql>
                    <include-updates>false</include-updates>
                </find-method>
                <find-method>
                    <query-method>
                        <method-name>findInRange</method-name>
                        <method-params>
                            <method-param>double</method-param>
                            <method-param>double</method-param>
                        </method-params>
                    </query-method>
                    <sql>price between ? and ?</sql>
                    <include-updates>false</include-updates>
                </find-method>
                <find-method>
                    <query-method>
                        <method-name>findByPrimaryKey</method-name>
                        <method-params>
                            <method-param>pkproduct.Pid</method-param>
                        </method-params>
                    </query-method>
                    <include-updates>false</include-updates>
                </find-method>
                <db-vendor>oracle</db-vendor>
                <data-source-name>datasource1</data-source-name>
            </schema-info>
        </jeus-bean>
    </beanlist>
</jeus-ejb-dd>
