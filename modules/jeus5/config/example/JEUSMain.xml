<?xml version="1.0" encoding="UTF-8"?>
<jeus-system xmlns="http://www.tmaxsoft.com/xml/ns/jeus">
    <node>
        <name>example</name>
        <engine-container>
            <name>container1</name>
            <command-option>
                -Xms256m -Xmx512m 
	        -Djeus.ejb.enable.configDeleteOption=true
                -Djeus.ejb.notreload=MyGroup
            </command-option>
            <engine-command>
                <type>jms</type>
                <name>engine1</name>
            </engine-command>
            <engine-command>
                <type>ejb</type>
                <name>engine1</name>
            </engine-command>
            <engine-command>
                <type>servlet</type>
                <name>engine1</name>
            </engine-command>
            <scheduler/>
            <res-ref>
            	<jndi-info>
            		<ref-name>UDDIDB</ref-name>
            		<export-name>datasource1</export-name>
            	</jndi-info>
            </res-ref>
        </engine-container>
        <class-ftp>true</class-ftp>
        <sequential-start>true</sequential-start>
        <enable-webadmin>true</enable-webadmin>
        <enable-jnlp>true</enable-jnlp>
        <scheduler/>
        <session-server>
            <resolution>60000</resolution>
            <session-manager>
                <name>session1</name>
                <passivation-to>1200000</passivation-to>
                <removal-to>15000000</removal-to>
                <check-to>1000</check-to>
            </session-manager>
        </session-server>
        <jmx-manager>
            <jmx-connector>
                <jmxmp-connector>
                    <jmxmp-connector-port>0</jmxmp-connector-port>
                </jmxmp-connector>
            </jmx-connector>
            <html-adaptor-port>-1</html-adaptor-port>
            <snmp-adaptor>
                <snmp-adaptor-port>9999</snmp-adaptor-port>
                <snmp-version>3</snmp-version>
                <snmp-max-packet-size>4096</snmp-max-packet-size>
                <snmp-security>true</snmp-security>
                <pooling>
                    <min>5</min>
                    <max>20</max>
                    <period>5</period>
                </pooling>
            </snmp-adaptor>
        </jmx-manager>
    </node>
    <resource>
        <data-source>
            <database>
                <vendor>others</vendor>
                <export-name>datasource1</export-name>
                <data-source-class-name>jeus.jdbc.driver.blackbox.BlackboxConnectionPoolDataSource</data-source-class-name>
                <data-source-type>ConnectionPoolDataSource</data-source-type>
                <property>
                    <name>URL</name>
                    <type>java.lang.String</type>
                    <value>jdbc:hsqldb:hsql://localhost/</value>
                </property>
                <property>
                    <name>DriverClassName</name>
                    <type>java.lang.String</type>
                    <value>org.hsqldb.jdbcDriver</value>
                </property>
                <property>
                    <name>User</name>
                    <type>java.lang.String</type>
                    <value>sa</value>
                </property>
                <property>
                    <name>Password</name>
                    <type>java.lang.String</type>
                    <value/>
                </property>
            </database>
            <database>
                <vendor>others</vendor>
                <export-name>localxa</export-name>
                <data-source-class-name>jeus.jdbc.driver.blackbox.BlackboxConnectionPoolDataSource</data-source-class-name>
                <data-source-type>ConnectionPoolDataSource</data-source-type>
                <property>
                    <name>URL</name>
                    <type>java.lang.String</type>
                    <value>jdbc:hsqldb:hsql://localhost</value>
                </property>
                <property>
                    <name>DriverClassName</name>
                    <type>java.lang.String</type>
                    <value>org.hsqldb.jdbcDriver</value>
                </property>
                <property>
                    <name>User</name>
                    <type>java.lang.String</type>
                    <value>sa</value>
                </property>
                <connection-pool>
                    <pooling>
                        <min>2</min>
                        <max>30</max>
                        <step>4</step>
                        <period>3600000</period>
                    </pooling>
                    <wait-free-connection>
                        <enable-wait>false</enable-wait>
                        <wait-time>10000</wait-time>
                    </wait-free-connection>
                </connection-pool>
            </database>
        </data-source>
    </resource>
    <application>
        <name>examples</name>
        <path>examples.ear</path>
        <deployment-target>
	    	<target>
                <engine-container-name>example_container1</engine-container-name>
                <web-context-group>
                    <name>MyGroup</name>
                </web-context-group>
            </target>
        </deployment-target>
        <deployment-type>EAR</deployment-type>
        <ejb-component>
            <uri>samples.jar</uri>
        </ejb-component>
        <web-component>
            <uri>examples.war</uri>
        </web-component>
    </application>
</jeus-system>
