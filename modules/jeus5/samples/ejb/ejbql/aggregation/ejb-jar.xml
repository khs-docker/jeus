<?xml version="1.0"?>
<!DOCTYPE ejb-jar PUBLIC '-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN' 'http://java.sun.com/dtd/ejb-jar_2_0.dtd'>
<ejb-jar>
    <enterprise-beans>
        <entity>
            <ejb-name>BookBean</ejb-name>
            <home>ejb.ejbql.aggregation.BookHome</home>
            <remote>ejb.ejbql.aggregation.Book</remote>
            <ejb-class>ejb.ejbql.aggregation.BookEJB</ejb-class>
            <persistence-type>Container</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <primkey-field>code</primkey-field>
            <reentrant>False</reentrant>
            <cmp-version>2.x</cmp-version>
            <abstract-schema-name>Book</abstract-schema-name>
            <cmp-field><field-name>code</field-name></cmp-field>
            <cmp-field><field-name>title</field-name></cmp-field>
            <cmp-field><field-name>author</field-name></cmp-field>
            <cmp-field><field-name>price</field-name></cmp-field>
            <cmp-field><field-name>publisher</field-name></cmp-field>
            <query>
               <query-method>
                  <method-name>findByTitle</method-name>
                  <method-params>
                     <method-param>java.lang.String</method-param>
                  </method-params>
               </query-method>
               <ejb-ql>
                     SELECT OBJECT(b) FROM Book b WHERE b.title = ?1
               </ejb-ql>
            </query>
            <query>
               <query-method>
                  <method-name>findAll</method-name>
                  <method-params/>
               </query-method>
               <ejb-ql>
                     SELECT OBJECT(b) FROM Book b
               </ejb-ql>
            </query>
            <query>
               <query-method>
                  <method-name>ejbSelectCount</method-name>
                  <method-params/>
               </query-method>
               <ejb-ql>
                     SELECT count(*) FROM Book b
               </ejb-ql>
            </query>
            <query>
               <query-method>
                  <method-name>ejbSelectMin</method-name>
                  <method-params/>
               </query-method>
               <ejb-ql>
                     SELECT MIN(b.price) FROM Book b
               </ejb-ql>
            </query>
            <query>
               <query-method>
                  <method-name>ejbSelectMax</method-name>
                  <method-params/>
               </query-method>
               <ejb-ql>
                     SELECT MAX(b.price) FROM Book b
               </ejb-ql>
            </query>
            <query>
               <query-method>
                  <method-name>ejbSelectSum</method-name>
                  <method-params/>
               </query-method>
               <ejb-ql>
                     SELECT SUM(b.price) FROM Book b
               </ejb-ql>
            </query>
            <query>
               <query-method>
                  <method-name>ejbSelectAvg</method-name>
                  <method-params/>
               </query-method>
               <ejb-ql>
                     SELECT AVG(b.price) FROM Book b
               </ejb-ql>
            </query>
        </entity>
    </enterprise-beans>
    <assembly-descriptor>
        <container-transaction>
            <method>
                <ejb-name>BookBean</ejb-name>
                <method-name>*</method-name>
                <method-params/>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
    </assembly-descriptor>
</ejb-jar>
